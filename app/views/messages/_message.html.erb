<p id="<%=dom_id message%>">
  <%if message.new? %>
    <div class="text-success">
  <%else %>
    <div>
  <%end%>
    <strong><%= message.created_at.to_fs(:short)%> </strong>: <%= message.content %>
  </div>

  <% if (Time.now - message.created_at) > 0.5  %>
    <%  message.read!  if message.new?%>
  <% end %>
</p>