<h1> New message </h1>
<%= turbo_frame_tag "new message", target: "_top" do %>
  <%= form_with(model: [@message.chat, @message], 
        data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f|%>
    <div class = "field">
      <%= f.text_field :content%>
      <%= f.submit "send" %>
    </div>
  <% end %>
<% end %>

<%= link_to 'back', @message.chat %>
   