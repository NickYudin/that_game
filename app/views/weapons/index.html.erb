<div id="search">
  <%= search_form_for @q do |f| %>

    <%= f.search_field :name_cont %>

    <%= f.submit %>
  <% end %>
</div>
</br>
<div data-controller="infinite-scroll" data-action="scroll@window->infinite-scroll#scroll">
  <table class="table table-striped mt-5">
    <tr>
      <th>
        Name
      </th>
      <th>
        Damage
      </th>
      <th>
        Damage type
      </th>
      <th>
        Cost
      </th>
      <th>
        Weight
      </th>
      <th>
        Properties
      </th>
    </tr>
    <div data-target="infinite-scroll.entries" >
      <%= render 'weapons/weapons'%>
    </div>
  </table> 
  <div data-infinite-scroll-target="pagination"">
    <%== will_paginate @weapons %>
  </div>
 </div>
