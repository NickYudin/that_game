<%= form_with(model: room) do |form| %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :monster_id, style: "display: block" %>
    <%= form.number_field :monster_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
