<ul id="left_menu" class="nav flex-column">
  <% if current_user %>
    <% if character_exist? %> 
      <li class="nav-item m-5">
        <img src="<%=check_avatar(current_user.character)%>",  width="250" >
      </li>
       <li class="nav-item mt-3 text-center">
        <%= "#{current_user.character.race.name.downcase} - #{current_user.character.char_class.name.downcase} #{current_user.character.name}" %>
      </li>
      <li class="nav-item mt-2">
        <%= "LVL #{current_user.character.level}" %>
      </li>
      <li class="nav-item">
        <div class="progress">
          <div class="progress-bar bg-success" role="progressbar" style="width: <%= progress %>%;">
            <%= "#{current_user.character.health} / #{current_user.character.max_health} HP" %>
          </div>
        </div>
      </li>
      
      <li class="nav-item mb-2">
        <%="EXP #{current_user.character.experiense}" %>
      </li>
    <% else %>
      <%= button_to "Create character", new_character_path, method: :get %>
    <% end %>
  <% else %>
    <li class="nav-item">
      <%= link_to "sign in", new_user_session_path %>
    </li>          
  <% end %>
  <% if current_user%>
    <%= turbo_stream_from Chat.first%>
      <%= turbo_frame_tag Chat.first, target: "_top" do%>
        <%= render "layouts/logs"%>
      <% end %>
  <% end %>
</ul>